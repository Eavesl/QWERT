<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="56dp">

    <TextView
        android:id="@+id/adder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/add_shaoe"
        android:textSize="20sp"
        android:text="＋"/>
    <TextView
        android:id="@+id/shower"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="11"
        android:background="@drawable/shower_shape"
        android:layout_toRightOf="@id/adder"/>
    <TextView
        android:id="@+id/remover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/remover_shape"
        android:textSize="20sp"
        android:text="－"
        android:layout_toRightOf="@id/shower"/>


</RelativeLayout>